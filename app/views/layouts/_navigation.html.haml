%nav.navbar.navbar-default{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle{type: 'button', 'data-toggle' => 'collapse',
      'data-target' => '#bs-example-navbar-collapse-1'}
      %span.sr-only Toggle navigation
      %span.fa.fa-bars
    = link_to "QuantifiedLife", root_path, class: 'navbar-brand'
  .collapse.navbar-collapse{id: 'bs-example-navbar-collapse-1'}
    - if signed_in?
      %ul.nav.navbar-nav
        %li= link_to "My Days", days_path
        %li= link_to "", new_day_path, class: 'fa fa-plus'
        %li= link_to "My Posts", posts_path
        %li= link_to "", new_post_path, class: 'fa fa-plus'
    %ul.nav.navbar-nav.navbar-right
      - if signed_in?
        %li= link_to "All Users", users_path
      %li.dropdown
        - if signed_in?
          %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
            = current_user.email
            %b.fa.fa-caret-square-o-down
          %ul.dropdown-menu
            %li= link_to 'View Profile', user_path(current_user)
            %li= link_to 'Edit Profile', edit_user_path(current_user)
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          = link_to "Sign In", new_user_session_path
