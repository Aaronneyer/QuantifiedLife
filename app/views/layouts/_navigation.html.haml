%nav.navbar.navbar-default{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle{type: 'button', 'data-toggle' => 'collapse',
      'data-target' => '#bs-example-navbar-collapse-1'}
      %span.sr-only Toggle navigation
      %span.fa.fa-bars
    = link_to "QuantifiedLife", root_path, class: 'navbar-brand'
  .collapse.navbar-collapse{id: 'bs-example-navbar-collapse-1'}
    - if user_signed_in?
      %ul.nav.navbar-nav
        %li= link_to "Days", days_path
        %li= link_to "+", new_day_path
        %li= link_to "Posts", posts_path
        %li= link_to "+", new_post_path
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        - if user_signed_in?
          %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
            = current_user.email
            %b.fa.fa-caret-square-o-down
          %ul.dropdown-menu
            %li= link_to 'View User', user_path(current_user)
            %li= link_to 'Edit User', edit_user_path(current_user)
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          = link_to "Sign In", new_user_session_path
